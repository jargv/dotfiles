[user]
  name = Jonathan Geddes
	useconfigonly = true
[credential]
  helper = cache --timeout=36000
[core]
  editor = nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
	autocrlf = input
	longpaths = true
	symlinks = true
[merge]
  tool = nvimdiff
  state = true
[diff]
  tool = nvimdiff
  renames = copies
[diff "image"]
  command = ~/config/bin/git-imgdiff
[mergetool]
  prompt = false
  trustExitCode = true
[difftool]
  prompt = false
  trustExitCode = true
[clean]
  requireForce = true
[branch]
  # always set up tracking branch based on the branched-from branch
  autosetupmerge = always
  # on pull, always do a rebase instead of a merge
  autosetuprebase = always
[push]
  default = simple
[rerere]
  enabled = true
  autoupdate = true
[color]
  ui = auto
[apply]
  whitespace = nowarn
[instaweb]
  browser = google-chrome
[alias]
  st = status -sb
  dt = difftool
  hist = !tig --all
  hist-one = !tig
  fuckit = reset --hard
  pushupforce = ! git push --force-with-lease origin $(git rev-parse --abbrev-ref @)
  pushup = ! git push origin $(git rev-parse --abbrev-ref @)
  in = ! snapaccess credentials refresh
[tig]
  main-view-author = abbreviated
  main-view-date = relative-compact
  #main-view-line-number = yes,interval=1
  main-view-id = yes,width=10
  mouse = yes
  line-graphics=utf-8
  tab-size=2
  ignore-space=all
[tig "bind"]
  main = d !git difftool %(commit)~1 %(commit)
  main = y !@clip -s %(commit)
  refs = d !git difftool %(commit)
  status = d !git difftool %(file)
  refs = % !git branch %(prompt "branch name") origin/master
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[pull]
	ff = only
[url "git@github.snooguts.net:"]
	insteadOf = https://github.snooguts.net/
